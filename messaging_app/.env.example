# Copy this file to `.env` and fill in safe values for local/dev.

# Django
DJANGO_SECRET_KEY=change-me
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL (used by docker-compose and Django settings)
MYSQL_DATABASE=messaging_db
MYSQL_USER=messaging_user
MYSQL_PASSWORD=messaging_pass
MYSQL_ROOT_PASSWORD=root_pass

# Optional: override service host/port (compose provides defaults)
MYSQL_HOST=db
MYSQL_PORT=3306
